<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/shape_background_green_lite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivitySobre">

    <ImageView
        android:id="@+id/imageSobreVoltar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="341dp"
        android:src="@drawable/vector_asset_voltar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardSobre2"
        app:tint="@color/subtext" />

    <TextView
        android:id="@+id/textSobre1"
        style="@style/TEXT"
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="74dp"
        android:text="Sobre o app MyIF"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardSobre"
        android:layout_width="371dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonSobreLinkedin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSobre3">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageView
                android:id="@+id/cabrueira"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@drawable/cabrueira"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/cardText1"
                style="@style/TEXT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:justificationMode="inter_word"
                android:text="Gabriel Souza de Vasconcelos"
                android:textAlignment="textStart"
                android:textSize="16dp"
                app:layout_constraintLeft_toRightOf="@id/cabrueira"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cardSubtext1"
                style="@style/SUBTEXT"
                android:layout_width="252dp"
                android:layout_height="59dp"
                android:layout_marginVertical="5dp"
                android:text="@string/sobre_cabrueira"
                android:textSize="12dp"
                app:layout_constraintLeft_toLeftOf="@id/cardText1"
                app:layout_constraintRight_toRightOf="@id/cardText1"
                app:layout_constraintTop_toBottomOf="@id/cardText1" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textSobre6"
        style="@style/TEXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="236dp"
        android:text="Perfil do orientador"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSobreLinkedin" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardSobre2"
        android:layout_width="371dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSobre6">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageView
                android:id="@+id/cabrueira2"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@drawable/professor"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/cardText2"
                style="@style/TEXT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:justificationMode="inter_word"
                android:text="Alexandre Costa"
                android:textAlignment="textStart"
                android:textSize="16dp"
                app:layout_constraintLeft_toRightOf="@id/cabrueira2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cardSubtext2"
                style="@style/SUBTEXT"
                android:layout_width="252dp"
                android:layout_height="59dp"
                android:layout_marginVertical="5dp"
                android:text="@string/sobre_professor"
                android:textSize="12dp"
                app:layout_constraintLeft_toLeftOf="@id/cardText2"
                app:layout_constraintRight_toRightOf="@id/cardText2"
                app:layout_constraintTop_toBottomOf="@id/cardText2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textSobre2"
        style="@style/TEXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="253dp"
        android:text="Descrição do app"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSobre1" />

    <TextView
        android:id="@+id/subTextSobre2"
        style="@style/SUBTEXT"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:justificationMode="inter_word"
        android:text="@string/sobre_app"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSobre2" />

    <TextView
        android:id="@+id/textSobre3"
        style="@style/TEXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="201dp"
        android:text="Perfil do desenvolvedor"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subTextSobre2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonSobreLinkedin"
        style="@style/TEXT_WHITE"
        android:layout_width="374dp"
        android:layout_height="41dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/shape_button_linkedin"
        android:drawableStart="@drawable/linkedin_logo"
        android:drawableTint="@color/white"
        android:paddingHorizontal="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardSobre" />

</androidx.constraintlayout.widget.ConstraintLayout>