<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintDialog"
        android:layout_width="320dp"
        android:layout_height="560dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="80dp"
        android:background="@drawable/shape_layout"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/dialogImageHorario"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginVertical="10dp"
            app:layout_constraintBottom_toTopOf="@id/dialogText2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialogText1" />

        <ImageView
            android:id="@+id/dialogHorarioDissmis"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="15dp"
            android:src="@drawable/vector_asset_dissmis"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dialogText1"
            style="@style/TEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Horário de aulas"
            android:textSize="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dialogSubtext1"
            style="@style/SUBTEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sabe qual é a próxima aula?"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialogText1" />

        <ImageView
            android:id="@+id/dialogImageIllustration"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginVertical="30dp"
            android:padding="20dp"
            android:src="@drawable/schadule_illustration"
            app:layout_constraintBottom_toTopOf="@id/dialogText2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialogSubtext1" />

        <TextView
            android:id="@+id/dialogText2"
            style="@style/TEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="80dp"
            android:justificationMode="inter_word"
            android:text="Adicione aqui seu horário de aulas:"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/subtextDialog2"
            style="@style/SUBTEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Somente arquivos em PDF*"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="@id/dialogText2"
            app:layout_constraintRight_toRightOf="@id/dialogText2"
            app:layout_constraintTop_toBottomOf="@id/dialogText2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialogButtonBuscarHorario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/shape_button"
            android:text="ADICIONAR HORÁRIO"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/dialogText2"
            app:layout_constraintRight_toRightOf="@id/dialogText2"
            app:layout_constraintTop_toBottomOf="@id/subtextDialog2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialogButtonAdicionarHorario"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_button"
            android:text="SALVAR"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/dialogButtonBuscarHorario2"
            app:layout_constraintRight_toRightOf="@id/dialogText2"
            app:layout_constraintTop_toBottomOf="@id/subtextDialog2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialogButtonBuscarHorario2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_button"
            android:padding="5dp"
            android:text="SUBSTITUIR DOCUMENTO"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/dialogText2"
            app:layout_constraintRight_toLeftOf="@id/dialogButtonAdicionarHorario"
            app:layout_constraintTop_toBottomOf="@id/subtextDialog2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>